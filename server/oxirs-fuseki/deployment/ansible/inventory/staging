# OxiRS Fuseki Staging Inventory

[fuseki_servers]
# Staging SPARQL servers
fuseki-staging-01 ansible_host=10.1.1.10 environment=staging datacenter=us-west-2a

[fuseki_servers:vars]
oxirs_version=0.1.0-beta.2
oxirs_http_port=3030
oxirs_https_port=3031
enable_tls=true
enable_auth=true
enable_metrics=true
enable_clustering=false
max_memory=4096m
max_threads=4

[monitoring_servers]
mon-staging-01 ansible_host=10.1.2.10 environment=staging

[monitoring_servers:vars]
enable_prometheus=true
enable_grafana=true
grafana_admin_password=staging_password

[staging:children]
fuseki_servers
monitoring_servers

[staging:vars]
ansible_user=ubuntu
ansible_ssh_private_key_file=~/.ssh/oxirs-staging.pem
ansible_python_interpreter=/usr/bin/python3
environment=staging
